<div class="index_show">
  <%= form_with(model: item) do |form| %>
    <% if item.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

        <ul>
          <% item.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :nome, style: "display: block" %>
      <%= form.text_field :nome %>
    </div>

    <div>
      <%= form.label :preco_unitario, style: "display: block" %>
      <%= form.text_field :preco_unitario %>
    </div>

    <div>
      <%= form.label :descricao, style: "display: block" %>
      <%= form.text_field :descricao %>
    </div>

    <div>
      <%= form.label :quantidade, style: "display: block" %>
      <%= form.number_field :quantidade %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
</div>