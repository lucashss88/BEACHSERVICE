<div>
  <div class="display_show" style="width: 100%; border-bottom: 1px solid darkgrey">
    <div class="display_show">
      <p><%= image_tag "bslogo2.png", class: "img_logo_cardapio" %></p>
    </div>
  </div>

  <div class="index_show" style="margin-top: 10px">
    <div style="justify-content: center; text-align: center"><h2>Financeiro</h2></div>

    <div style="margin-bottom: 20px; margin-top: 20px">
      <%#= form_tag(search_orders_path, method: :get) do %>
      <div>
        <%= text_field_tag :search_date, params[:search_date], placeholder: 'Data específica' %>
        <%= submit_tag 'Search' %>
      </div>
      <div class="display_show_finantial">
        <h4>Mês</h4>
        <%= select_tag :search_month, options_for_select((1..12).map { |m| [Date::MONTHNAMES[m], m] }), include_blank: true %>
        <%= submit_tag 'Search' %>
      </div>
      <div class="display_show_finantial">
        <h4>Ano</h4>
        <%= select_tag :search_year, options_for_select((Date.current.year - 5)..Date.current.year), include_blank: true %>
        <%= submit_tag 'Search' %>
      </div>


      <%# end %>

    </div>
    <div class="display_show">
      <i class="fas fa-arrow-left" style="margin-right: 2px"></i>
      <%= link_to "VOLTAR ", table_index_path %>
    </div>
  </div>
</div>